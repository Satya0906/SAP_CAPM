<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="addItemDialog"
        title="Add Item"
        type="Message">

        <VBox class="sapUiSmallMargin">

            <Label text="Product Name" />
            <Input id="inpProduct" placeholder="Enter Product" />

            <Label text="Quantity" />
            <Input id="inpQty" type="Number" />

            <Label text="Price" />
            <Input id="inpPrice" type="Number" />

        </VBox>

        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveItem"/>
        </beginButton>

        <endButton>
            <Button text="Cancel" press=".onCancel"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>
